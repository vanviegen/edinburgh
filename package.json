{
  "name": "edinburgh",
  "version": "0.1.3",
  "author": "Frank van Viegen",
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/node": "^22.10.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "readme-tsdoc": "^1.1.4"
  },
  "exports": {
    ".": {
      "bun": "./src/edinburgh.ts",
      "types": "./build/src/edinburgh.d.ts",
      "default": "./build/src/edinburgh.js"
    },
    "./bytes": {
      "bun": "./src/bytes.ts",
      "types": "./build/src/bytes.d.ts",
      "default": "./build/src/bytes.js"
    }
  },
  "description": "Very fast object persistence for TypeScript, supporting optimistic transactions, on-demand reference loading, automatic back-references and indexes.",
  "files": [
    "src",
    "build/src"
  ],
  "keywords": [
    "orm",
    "backend",
    "database",
    "transactions",
    "acid",
    "lmdb",
    "olmdb",
    "typescript"
  ],
  "license": "ISC",
  "scripts": {
    "build": "rm -rf build && tsc",
    "test": "npm run test:bun && npm run test:node",
    "test:watch": "bun x vitest --bail 1 --watch --silent=passed-only",
    "test:bun": "bun test --bail",
    "test:node": "bun x vitest --bail 1 --watch=false --silent=passed-only",
    "prepack": "npm run build && npm run test && npm run readme-tsdoc",
    "readme-tsdoc": "readme-tsdoc --repo-url https://github.com/vanviegen/edinburgh"
  },
  "trustedDependencies": [
    "olmdb"
  ],
  "type": "module",
  "dependencies": {
    "olmdb": "^0.2.19"
  }
}
